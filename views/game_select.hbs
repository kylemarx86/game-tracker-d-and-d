<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Dungeons and Dragons - login</title>
    <meta name='viewport' content='width=device-width, initial-scale=1, user-scalable=no'>

    <!-- stylesheet -->
    <link rel='stylesheet' href='/css/style.css'>
    <!-- font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- jQuery -->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <!-- socket.io -->
    <script src='/socket.io/socket.io.js'></script>
    <!-- script -->
    <script src='/js/game_select.js'></script>
</head>

<body>
    <header></header>
    <main>
        <nav class='nav-wrapper red darken-4'>
            <div class="center">Dungeons and Dragons Game Tracker</div>
        </nav>

        <div class='row section'>
            <div class='col s12 m6'>
                <nav class="nav-extended">
                    <div class='nav-tabs red darken-4 s6'>
                        <div class='row'>
                            <div class="nav-content col s12">
                                <ul class="tabs tabs-transparent">
                                    <li class="tab col s6">
                                        <a class="active" href="#existing-game">Enter Existing Game</a>
                                    </li>
                                    <li class="tab col s6">
                                        <a class="disabled" href="#create-game">Create Game</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>
                <div id="existing-game" class="">
                    <form class='col s12' action='/enter_game' method="POST">
                        <input class='panel__input' type='hidden' name='role' value='player'>
                        <div class='row'>
                            <div class='form-field input-field col s12'>
                                <select class='panel__input' name="game" disabled>
                                    <option value="" disabled selected>No games available</option>
                                </select>
                                <label>Available games</label>
                            </div>
                        </div>
                        <div class='row center-align'>
                            <div class='form-field input-field col s12'>
                                <button class='btn'>Enter</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div id="create-game" class="">
                    <form class='col s12' action='/create_game' method="POST">
                        <input class='' type='hidden' name='role' value='gameMaster'>
                        <div class='row'>
                            <div class='input-field col s12'>
                                <label>Game Name</label>
                                <input class='' type='text' name='game' />
                            </div>
                        </div>
                        <div class='row center-align'>
                            <div class='input-field col s12'>
                                <button class='btn'>Create</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class='col s12 m6'>
